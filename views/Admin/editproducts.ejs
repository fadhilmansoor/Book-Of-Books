

<%- include('../layouts/header.ejs')%>

<%- include('../layouts/sidebar.ejs')%>
   
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">



   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>



  <form action="/admin/editproducts/<%= editPro._id %>" style="padding: 80px;" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label >Edit Name</label>
      <input type="text" name="name" value="<%= editPro.name %>" class="form-control" id="exampleFormControlInput1" placeholder="enter the Name" required>
    </div>
    <br><br>
    <div class="form-group">
      <label >Image</label>
      <input type="file"  name="image" multiple required>
    </div>
    <br><br>
    <div class="form-group">
      <label >Price</label>
      <input type="number" name="Price" value="<%= editPro.Price %>" >
    </div>
    <br><br>
    <div class="form-group">
      <label >Offer</label>
      <input type="number" name="Offer" >
    </div>
    <div class="form-group">
      <label >Edit stock</label>
      <input type="text" name="stock" value="<%= editPro.stock %>" class="form-control" id="exampleFormControlInput1" placeholder="enter the Name" required>
    </div>
    <br><br>
    <div class="form-group">
      <label>About The Product</label>
      <input 
      style="height: 100px;"
      type="text" name="About"  class="form-control" value="<%= editPro.name.About %>"  required>
   
    </div>

  </div>
    
<br>
    <button type="submit" class="btn btn-success" >Add</button>
    <% if(typeof message !=="undefined") { %>
      <h5 style="font-size: 14px;color: brown;"><%=message  %></h5>
      <%} %>
  </form>

  </section>

<%- include('../layouts/footer.ejs')%>