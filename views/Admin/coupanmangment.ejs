<%- include('../layouts/header.ejs')%>
  <%- include('../layouts/nav.ejs')%>
    <%- include('../layouts/sidebar.ejs')%>

      <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <div class="container-fluid py-4">
          <div class="row">
            <div class="col-12">
              <div class="card my-4">
                <div class="card-header p-0 posit00.   ion-relative mt-n4 mx-3 z-index-2">
                  <a href="/admin/addcoupen" class="btn btn-outline-primary" role="button">Add</a>


                  <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">COUPEN MANGMENT</h6>
                  </div>
                </div>
                <div class="card-body px-0 pb-2">
                  <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                      <thead>
                        <tr>
                          <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                            Name</th>
                          <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                            MaxDiscount</th>
                            <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                              MinPurchaseAmount</th>
                              <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                expirationDate</th>
                                <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                  parcentageOff</th>
                                  <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                  </th>
                        </tr>
                      </thead>
                      <tbody>
                        <%= console.log(find); %>
                        <% find.forEach((x,index)=>{ %>
                        <tr>
                          <td>
                            <%=x.code %>
                          </td>
                          <td>
                         <%= x.maxDiscount %>
                          </td>
                          <td >
                            <%= x.minpurachaseAmount %>
                          </td> 
                           <td >
                            <%= x.expirationDate.toISOString().slice(0,10)%>
                          </td>
                          <td>
                            <%= x.parcentageOff %>
                          </td>
                          <td>
                            <button class="btn btn-outline-primary"><a href="/admin/deletecoupan/<%=x._id%>">DELETE</a></button>
                            <button type="submit" class="btn btn-outline-warning"><a
                              href="/admin/editcoupan/<%=x._id%>">EDIT</a></button>
                          </td>
                        </tr>
                   <% }); %>
                      </tbody>
                      
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <%- include('../layouts/footer.ejs')%>