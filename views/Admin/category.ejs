                      </tr>
                    </thead>
                    <tbody>
                      <% categoryDatas.forEach((x,index)=>{ %>
                    <tr>
                     <th scope="row"><%= index+1 %></th>
                     <td><%= x.Category %></td>
                     <td><%= x.description %></td>
                    <td>
                     <th>
                     <button  class="btn btn-outline-primary"> <a href="/admin/category/deletecategory/<%= x._id %>">DELETE</a></button></a>

                     <button type="submit" class="btn btn-outline-warning"><a href="/admin/category/editcategory/<%=x._id%>">EDIT</a></button> 
                      </th>
                      <% });  %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        
      
