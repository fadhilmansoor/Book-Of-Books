
<%- include('../layouts/header.ejs')%>

<%- include('../layouts/sidebar.ejs')%>
   
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">



   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>


  
  <form style="padding: 80px;" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label >Name</label>
      <input type="text" name="name" class="form-control" id="exampleFormControlInput1" placeholder="enter the Name">
    </div>
    <br><br>
    <div class="form-group">
      <label >Image</label>
      <input type="file"  name="image" multiple required>
    </div>
    <br><br>
    <div class="form-group">
      <label >Price</label>
      <input type="number" name="Price" >
    </div>
    <div class="form-group">
      <label>Select Category</label>
      <select class="form-control" id="exampleFormControlSelect1" name="category">
        <option> select category</option>
        <% categorys.forEach((el)=>{ %>

       
          
          <option value="<%=el._id %>"><%=el.Category %></option>
          
          <%  }) %>
      </select>
    </div>
    <div class="form-group">
      <label >Stock</label>
      <input type="text" name="stock" class="form-control" id="exampleFormControlInput1" placeholder="enter the Name">
    </div>
    <br><br>
    <div class="form-group">
      <label >About The Product</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" name="About" rows="3"></textarea>
    </div>
<br>
    <button type="submit" class="btn btn-success" >Add</button>
    <% if(typeof message !=="undefined") { %>
      <h5 style="font-size: 14px;color: brown;"><%=message  %></h5>
      <%} %>
  </form>

  </section>
<%- include('../layouts/footer.ejs')%>

