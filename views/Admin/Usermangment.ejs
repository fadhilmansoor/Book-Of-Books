                        <th scope="col" class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                       
                      </tr>
                    </thead>
                    <tbody>
                        <% viewUser.forEach((x,index)=>{ %>
                      <tr>
                       <th scope="row"><%= index+1 %></th>
                       <td><%= x.name %></td>
                        
                      <td>
                        <% if(x.status==false) {%>
                          <p style="color:red">Blocked</p>
                         <%}else{%>
                             <p style="color:green">Active</p>
                             <%}%>
                         </td>
         
                         <td>
                          
    <a class="text-decoration-none text-white" href="/admin/usermangment/blockuser/<%=x._id %>">

<% if(x.status==false){ %>
    <button type="submit" class="btn btn-outline-warning">unblock</button>
      <% }else{ %> 
<button  class="btn btn-outline-primary">block</button>
     </a>
       
<% } %>
                         </td>
                       </tr>
         
                        <% });  %>
                      </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        
     
