		<script>
			function changeQuantity(proid, count, Price) {
				let quantity;
				quantity = Number(document.getElementById(proid).innerHTML)
				let stock= parseInt(document.getElementsByClassName(proid)[0].value) 
				if (quantity <= 1 && count == -1) {
					Swal.fire({
            title: 'Invalid Quantity!',
            text: 'Quantity Must Be Greater Than One',
            icon: 'warning',
            showConfirmButton: true
            }) }else if(quantity>=stock&& count === 1 ){
          Swal.fire({
            title: 'Out Of Stock!',
            text: 'Product Is Out Of Stock',
            icon: 'warning',
            showConfirmButton: true
            })
				} else {
					$.ajax({
						url: '/change_quantity',
						data: {
                            
							product: proid,
							count: count,
							Price: Price
						},
						method: 'post',
						success: (response) => {
							console.log(response);
							document.getElementById(proid).innerHTML = parseInt(quantity) + count
						document.getElementById(proid+"hai").innerHTML=response.pricequan
							document.getElementById('total').innerHTML =response.total
						}
					})

				}
			}


		</script>





